<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<include layout="@layout/toolbar" />
	
	<RelativeLayout
		android:id="@+id/more_setting_rl_volume"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:gravity="center"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:background="@drawable/selector_common_bg">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="音量键翻页"/>
		
		<androidx.appcompat.widget.SwitchCompat
			android:id="@+id/more_setting_sc_volume"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:clickable="false"
			android:longClickable="false"/>
	</RelativeLayout>
	
	<RelativeLayout
		android:id="@+id/more_setting_rl_full_screen"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:gravity="center"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:background="@drawable/selector_common_bg">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="全屏模式"/>
		
		<androidx.appcompat.widget.SwitchCompat
			android:id="@+id/more_setting_sc_full_screen"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:clickable="false"
			android:longClickable="false"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/more_setting_rl_convert_type"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:gravity="center"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:background="@drawable/selector_common_bg">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="繁簡轉換"/>

		<androidx.appcompat.widget.AppCompatSpinner
			android:id="@+id/more_setting_sc_convert_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentEnd="true"
			android:clickable="false"
			android:longClickable="false"/>
	</RelativeLayout>
</LinearLayout>